<p id="notice"><%= notice %></p>

<h1>Listing Stock Tickers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Stock symbol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stock_tickers.each do |stock_ticker| %>
      <tr>
        <td><%= stock_ticker.name %></td>
        <td><%= stock_ticker.stock_symbol %></td>
        <td><%= link_to 'Show', stock_ticker %></td>
        <td><%= link_to 'Edit', edit_stock_ticker_path(stock_ticker) %></td>
        <td><%= link_to 'Destroy', stock_ticker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

