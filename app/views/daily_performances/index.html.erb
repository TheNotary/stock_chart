<p id="notice"><%= notice %></p>

<h1>Listing Daily Performances</h1>

<table>
  <thead>
    <tr>
      <th>Stock ticker</th>
      <th>Stock price avg</th>
      <th>Yday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_performances.each do |daily_performance| %>
      <tr>
        <td><%= daily_performance.stock_ticker_id %></td>
        <td><%= daily_performance.stock_price_avg %></td>
        <td><%= daily_performance.yday %></td>
        <td><%= link_to 'Show', daily_performance %></td>
        <td><%= link_to 'Edit', edit_daily_performance_path(daily_performance) %></td>
        <td><%= link_to 'Destroy', daily_performance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

